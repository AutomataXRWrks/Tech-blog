<div class="text-center">
  <h2 data-id="{{id}}" id="title">{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>

  <p>
    <textarea
      name=""
      id="commentVal"
      cols="30"
      rows="10"
      placeholder="Leave a comment here..."
    ></textarea>
    <button class="btn btn-primary commentBtn">Leave Comment!</button>
  </p>
</div>

<script src="/js/comment.js"></script>